<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InsertActivity">

    <RelativeLayout android:id="@+id/RelativeLayoutImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView  android:id="@+id/imageViewFoto"
            android:layout_width="242dip"
            android:layout_height="72dip"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <Button
            android:id="@+id/buttonCamara"
            android:layout_toRightOf="@+id/imageViewFoto"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/button_imagen"
            android:textAppearance="@android:style/TextAppearance.Holo.Small"/>


        <EditText
            android:layout_marginTop="30dp"
            android:id="@+id/TXTPrecio"
            android:hint="@string/precio"
            android:layout_toRightOf="@+id/thumbnail"
            android:layout_below="@+id/buttonCamara"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textAppearance="@android:style/TextAppearance.Holo.Small"/>

    </RelativeLayout>


    <TableLayout
        android:layout_below="@+id/RelativeLayoutImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow >


            <EditText
                android:hint="@string/nombre"
                android:id="@+id/TXTNombre"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textAppearance="@android:style/TextAppearance.Holo.Small"/>
        </TableRow>


        <TableRow>


        </TableRow>


        <TableRow>
            <EditText
                android:hint="@string/descripcion"
                android:id="@+id/TXTDesc"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textAppearance="@android:style/TextAppearance.Holo.Small"/>
        </TableRow>


        <TableRow>


        </TableRow>


        <TableRow>
            <Button
                android:id="@+id/ButtonInsert"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/button_ingresar"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:textAppearance="@android:style/TextAppearance.Holo.Small"/>
        </TableRow>

    </TableLayout>



</LinearLayout>